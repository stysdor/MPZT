@model MPZT.GUI.Models.ProposalModel
@{
    ViewBag.Title = "Dodaj swoją propozycję";
}

<div class="panel panel-default">
    <div class="panel-heading">
        Dodaj swoją propozycję:
    </div>
    <div class="panel-body">
        @using (var form = Html.BeginForm("AddProposal", "Concept", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.AreaId)
            @Html.HiddenFor(x => x.UserId)
            <div class="form-group row">
                @Html.LabelFor(x => x.Description, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control col-sm", rows = "10" })
                    @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <button class="btn btn-primary pull-right" type="submit">Dodaj</button>
                </div>
            </div>
        }

    </div>
</div>

