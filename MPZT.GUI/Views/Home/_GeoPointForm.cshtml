@model MPZT.GUI.Models.GeoPointSearchModel

<div class="panel panel-primary">
    <div class="panel-body">
        @using (var form = Html.BeginForm("PostByGeoPoint", "Area", FormMethod.Post))
        {
            <div class="form-group row">
                @Html.LabelFor(x => x.GeoPoint.Latitude, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(x => x.GeoPoint.Latitude, new { @type = "number", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.GeoPoint.Latitude, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(x => x.GeoPoint.Longitude, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(x => x.GeoPoint.Longitude, new { @type = "number" , @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.GeoPoint.Longitude, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(x => x.Range, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(x => x.Range, new { @type = "number", @class = "form-control" } )
                    @Html.ValidationMessageFor(x => x.Range, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <button class="btn btn-primary pull-right" type="submit">Szukaj</button>
                </div>
            </div>
        }
    </div>
</div>


