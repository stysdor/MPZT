@model MPZT.GUI.Models.LocationModel

<div class="panel panel-primary">
    <div class="panel-body">
        @using (var form = Html.BeginForm("PostByLocation", "Area", FormMethod.Post))
        {
            <div class="form-group row">
                @Html.LabelFor(x => x.Wojewodztwo, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.Wojewodztwo, new SelectList(Model.Wojewodztwa), "Wybierz województwo", new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Wojewodztwo, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(x => x.Powiat, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Powiat, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Powiat, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(x => x.Gmina, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Gmina, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Gmina, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(x => x.City, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.City, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(x => x.Dzielnica, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Dzielnica, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Dzielnica, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <button class="btn btn-primary pull-right" type="submit">Szukaj</button>
                </div>
            </div>
        }
    </div>
</div>


